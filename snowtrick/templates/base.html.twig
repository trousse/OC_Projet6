<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1./css/font-awesome.min.css">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('Bulma') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    <script src="https://kit.fontawesome.com/efcd29bda4.js" crossorigin="anonymous"></script>
</head>
<body>
{% block navbar %}
    <div id="navbar">
        <div id="navbar_items_container">
            <div id="logo_container">
                <a href="{{ path("home_index") }}"><img id="logo" src="{{ asset("logo.png","photos") }}"></a>
            </div>
            <div id="menu_container">
                {% if app.user %}<a href="{{ path("trick_new") }}">Create trick</a><span> | {% endif %} </span><a href="{{ path("trick_index") }}">Tricks</a><span> {% if not app.user %}| </span><a
                        href="{{ path("auth_login") }}">Sign in</a><span> | </span><a
                        href="{{ path("auth_register") }}">Sign up</a>{% endif %}
                {% if app.user %}<span> | </span><a href="{{ path("auth_logout") }}">Sign out</a>{% endif %}
            </div>
        </div>
    </div>
    {% for message in app.flashes('success') %}
        <div class="notification is-success has-text-weight-bold">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="notification is-danger has-text-weight-bold">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
{% block top %}
{% endblock %}
<div id="main_container" class="container">
    {% block body %}{% endblock %}
</div>
{% block footer %}
    <div id="footer" class="is-hidden-mobile">
        Copyright @ Thomas Rousse
    </div>
{% endblock %}
</body>
</html>
